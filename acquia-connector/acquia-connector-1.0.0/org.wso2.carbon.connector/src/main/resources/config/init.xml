<template xmlns="http://ws.apache.org/ns/synapse" name="init">
    <parameter name="secretKey" description="Secret key provided by the Acquia for acquia lift contextDB REST API." />
    <parameter name="accessKey" description="Access key provided by the Acquia for acquia lift contextDB REST API." />
    <parameter name="apiUri" description="ApiUri provided by the Acquia for acquia lift contextDB REST API." />
    <parameter name="accountId" description="accountId provided by the Acquia for acquia lift contextDB REST API." />
    <sequence>
        <property name="acquia.contextdb.apiUri" expression="$func:apiUri"/>
        <property name="acquia.contextdb.accountId" expression="$func:accountId"/>
        <property name="acquia.contextdb.secret.key" expression="$func:secretKey" />
        <property name="acquia.contextdb.access.key" expression="$func:accessKey" />
    </sequence>
</template>

